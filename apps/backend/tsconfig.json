{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@db/*": ["../../packages/db/*"],
      "@services/*": ["../../packages/services/*"],
      "@events/*": ["../../packages/services/events/*"],
      "@wallet-engine/*": ["../../packages/wallet-engine/*"],
      "@utils/*": ["../../packages/utils/*"]
    }
  },
  "include": ["src"]
}